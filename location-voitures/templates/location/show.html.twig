{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Client</th>
                <td>{{ location.client.prenom ~" " ~ location.client.nom }}</td>
            </tr>
            <tr>
                <th>Voiture</th>
                <td>{{ location.voiture.marque ~" "~ location.voiture.modele }}</td>
            </tr>            
            <tr>
                <th>DateDebut</th>
                <td>{{ location.dateDebut ? location.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateRetour</th>
                <td>{{ location.dateRetour ? location.dateRetour|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prix total</th>
                <td>{{ location.coefPrix * location.voiture.prixBase }}</td>
            </tr>
            <tr>
                <th>CoefPrix</th>
                <td>{{ location.coefPrix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_location_index') }}">back to list</a>

    <a href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
